{
  "manifest_version": 3,
  "name": "小报童文章批量导出工具",
  "version": "3.1.6",
  "description": "批量下载小报童文章为Markdown格式 - v3.1.6基于原始v3.1版本，只修复ZIP生成null错误",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.xiaobot.net/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://xiaobot.net/*"],
      "js": ["src/jszip.min.js", "src/content_v3_original.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup_v3.html",
    "default_title": "小报童文章批量下载工具 v3.0",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["*://*.xiaobot.net/*"]
    }
  ]
}

